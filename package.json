    "nodemailer": "^6.4.6",
    "pg": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "source-map-support": "^0.5.19",
    "sqlite3": "^5.0.0",
